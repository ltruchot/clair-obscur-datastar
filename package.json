{
  "name": "clair-obscur-workspace",
  "description": "A mini-multiplayer-collaborative-browser-based game demonstrating DataStar Framework capabilities",
  "version": "1.0.0",
  "main": "index.js",
  "keywords": [],
  "author": "Lo√Øc TRUCHOT <loic.truchot.pro@gmail.com>",
  "license": "MIT",

  "engines": {
    "node": "22.20.0"
  },
  "packageManager": "pnpm@10.18.0",

  "scripts": {
    "dev": "pnpm --parallel --stream --filter @clair-obscur-workspace/domain --filter @clair-obscur-workspace/utils --filter @clair-obscur-workspace/funny-animals-generator --filter @clair-obscur-workspace/web-components --filter @clair-obscur-workspace/mpa dev",
    "dev:apps:mpa": "pnpm --filter @clair-obscur-workspace/mpa dev",
    "dev:packages:domain": "pnpm --filter @clair-obscur-workspace/domain dev",
    "dev:packages:utils": "pnpm --filter @clair-obscur-workspace/utils dev",
    "dev:packages:funny-animals-generator": "pnpm --filter @clair-obscur-workspace/funny-animals-generator dev",
    "dev:packages:web-components": "pnpm --filter @clair-obscur-workspace/web-components dev",
    "build": "pnpm --filter @clair-obscur-workspace/domain --filter @clair-obscur-workspace/utils --filter @clair-obscur-workspace/funny-animals-generator --filter @clair-obscur-workspace/web-components --filter @clair-obscur-workspace/mpa build",
    "build:apps:mpa": "pnpm --filter @clair-obscur-workspace/mpa build",
    "build:packages:domain": "pnpm --filter @clair-obscur-workspace/domain build",
    "build:packages:utils": "pnpm --filter @clair-obscur-workspace/utils build",
    "build:packages:funny-animals-generator": "pnpm --filter @clair-obscur-workspace/funny-animals-generator build",
    "build:packages:web-components": "pnpm --filter @clair-obscur-workspace/web-components build",
    "serve": "pnpm --filter @clair-obscur-workspace/mpa start",
    "lint": "eslint . --fix",
    "test": "pnpm --recursive test",
    "test:apps:mpa": "pnpm --filter @clair-obscur-workspace/mpa test",
    "test:packages:domain": "pnpm --filter @clair-obscur-workspace/domain test",
    "test:packages:utils": "pnpm --filter @clair-obscur-workspace/utils test",
    "test:packages:funny-animals-generator": "pnpm --filter @clair-obscur-workspace/funny-animals-generator test",
    "test:packages:web-components": "pnpm --filter @clair-obscur-workspace/web-components test"
  },

  "devDependencies": {
    "@eslint/css": "catalog:",
    "@eslint/js": "catalog:",
    "@eslint/json": "catalog:",
    "@eslint/markdown": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-import-resolver-typescript": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "globals": "catalog:",
    "jiti": "catalog:",
    "jsdom": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-organize-imports": "catalog:",
    "tslib": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "printWidth": 140,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
